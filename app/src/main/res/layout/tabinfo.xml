<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Territorio e Popolazione"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:color="#000000"
                android:id="@+id/popter"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_below="@id/popter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_below="@id/popter"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/text1"
                android:scaleType="centerCrop"
                />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/img"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="#000000"
                >

            </View>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_below="@id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locazione Geografica"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:color="#000000"
                android:id="@+id/locgeo"
                />

            <ImageView
                android:id="@+id/img1"
                android:layout_marginTop="15dp"
                android:layout_below="@id/locgeo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/img1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="#000000"
                >

            </View>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_below="@id/view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eventi Storici"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:color="#000000"
                android:id="@+id/evsto"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_below="@id/evsto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                />


            <LinearLayout
                android:layout_below="@id/evsto"
                android:id="@+id/SliderDots"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:layout_below="@+id/SliderDots"
                android:id="@+id/viewPager"
                android:layout_height="190dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_below="@id/viewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/img4"
                android:layout_marginTop="15dp"
                android:layout_below="@id/text3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/text4"
                android:layout_below="@id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text4"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="#000000"
                >
            </View>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_below="@id/view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monumenti Caratteristici"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:color="#000000"
                android:id="@+id/monumenti"
                />

            <ImageView
                android:id="@+id/img5"
                android:layout_marginTop="15dp"
                android:layout_below="@id/monumenti"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/monumenti1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img5"
                android:layout_alignTop="@id/img5"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                />

            <ImageView
                android:id="@+id/img6"
                android:layout_marginTop="15dp"
                android:layout_below="@id/img5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/monumenti2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img6"
                android:layout_alignTop="@id/img6"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                />

            <ImageView
                android:id="@+id/img7"
                android:layout_marginTop="15dp"
                android:layout_below="@id/img6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/monumenti3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img7"
                android:layout_alignTop="@id/img7"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                />


            <ImageView
                android:id="@+id/img8"
                android:layout_marginTop="15dp"
                android:layout_below="@id/img7"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/monumenti4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img8"
                android:layout_alignTop="@id/img8"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/img8"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="#000000"
                >
            </View>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_below="@id/view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piatti Tipici"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:color="#000000"
                android:id="@+id/cucina"
                />

            <ImageView
                android:id="@+id/img9"
                android:layout_marginTop="15dp"
                android:layout_below="@id/cucina"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/cucina1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img9"
                android:layout_alignTop="@id/img9"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                />

            <ImageView
                android:id="@+id/img10"
                android:layout_marginTop="15dp"
                android:layout_below="@id/img9"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/cucina2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img10"
                android:layout_alignTop="@id/img10"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                />

            <ImageView
                android:id="@+id/img11"
                android:layout_marginTop="15dp"
                android:layout_below="@id/img10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/cucina3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img11"
                android:layout_alignTop="@id/img11"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
