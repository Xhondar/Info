<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="esame.progetto.xhondar.github.com.info.tab"
    android:fillViewport="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_three"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/weatherPicture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="226dp"
            android:src="@drawable/sun" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:maxLines="3"
                android:text="Norimberga"
                android:paddingRight="16dp"
                android:layout_gravity="end"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempMeteo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Te"
                android:layout_gravity="end"
                android:paddingRight="16dp"
                android:textColor="#000000"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingRight="16dp"
                android:text="max:"
                android:layout_gravity="end"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thermometer"
            android:layout_width="67dp"
            android:layout_height="97dp"
            android:layout_gravity="bottom"
            android:src="@drawable/thermometer" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempMax"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="max:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempMin"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempMax"
                android:layout_marginBottom="12dp"
                android:paddingTop="20dp"
                android:text="min:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/timeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="12dp"
            android:gravity="right"
            android:maxLines="3"
            android:text="Data:"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
</ScrollView>