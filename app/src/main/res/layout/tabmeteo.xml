<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="esame.progetto.xhondar.github.com.info.tab"
    android:fillViewport="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/backgroundImage"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/weatherPicture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="226dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:maxLines="3"
                android:paddingRight="16dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempMeteo"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:paddingRight="16dp"
                android:textColor="#000000"
                android:textSize="45dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:paddingRight="16dp"
                android:textColor="#000000"
                android:textSize="55dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thermometer"
            android:layout_width="67dp"
            android:layout_height="87dp"
            android:layout_gravity="bottom"
            android:src="@drawable/thermometer" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempMax"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:shadowColor="#000000"
                android:shadowDx="1.7"
                android:shadowDy="1.5"
                android:shadowRadius="1.9"
                android:textColor="#ce480f"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempMin"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempMax"
                android:layout_marginBottom="12dp"
                android:paddingTop="20dp"
                android:shadowColor="#000000"
                android:shadowDx="1.7"
                android:shadowDy="1.5"
                android:shadowRadius="1.9"
                android:textColor="#006fff"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/timeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="12dp"
            android:gravity="right"
            android:maxLines="3"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>